Algoritmo "Algoritmo escolha nomes"

procedimento list1()
inicio

     Para i de 0 até 0 faca
        f<- i + 1
        Escreva("Nome", f, ": ")
        Leia(vetNome[i])
     FimPara
     
     Escreval(" ")
     Escreval("Escrita dos nomes digitados: ")

     Para i de 0 até 0 faca
        f <- i  + 1
        Escreval("Nome", f, ": ", vetNome[i])

     FimPara

fimprocedimento

